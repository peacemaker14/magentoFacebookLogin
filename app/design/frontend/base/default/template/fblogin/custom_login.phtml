<script>
j = jQuery.noConflict();
j(document).ready(function() {
    if(j(window).width() > 768) {
        j( ".awsm-dropdown-heading" ).click(function(e) {
            e.preventDefault();
            e.stopPropagation();
            j(".awsm-dropdown-content").toggle();
            j(".custom-login").toggleClass("custom-login-click");
        });
    } else {
        j(".custom-links").addClass("links").removeClass("custom-links");
    }
    j(".awsm-dropdown-content").click(function(e) {
        e.preventDefault();
        e.stopPropagation();
    });
    j(".ic-cart").hover(function() {
        j(".awsm-dropdown-content").hide();
        j(".custom-login").removeClass("custom-login-click");
    });
});

j(document).click(function() {
    j(".awsm-dropdown-content").hide();
    j(".custom-login").removeClass("custom-login-click");
});

</script>
